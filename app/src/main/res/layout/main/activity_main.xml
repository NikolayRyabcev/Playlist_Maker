<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:fontFamily="@font/ys_display_medium"
    android:orientation="vertical"
    android:paddingBottom="@dimen/settingsTopStringStart28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/left1"
        android:paddingTop="@dimen/settingsTopString14dp"
        android:text="@string/app_name"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/text1" />

    <Button
        android:id="@+id/SearchButton"
        style="@style/mainScreenButton"
        android:layout_marginTop="40dp"
        android:text="@string/searchString"
        app:icon="@drawable/search" />

    <Button
        android:id="@+id/MediaLibButtom"
        style="@style/mainScreenButton"
        android:text="@string/MediaLibraryString"
        app:icon="@drawable/musiclist" />

    <Button
        android:id="@+id/SettingsButton"
        style="@style/mainScreenButton"
        android:text="@string/SettingsString"
        app:icon="@drawable/settings" />

</LinearLayout>